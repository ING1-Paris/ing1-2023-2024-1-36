//sous programme jusqu'à la ligne 52 
#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#define ligne 10
#define colonne 20

struct Ball
        {
    int xb;
    int yb;
    int dirXb;
    int dirYb;
};

void initBall(struct Ball *ball)
        {
    ball->xb = rand() % (ligne - 2) + 1;
    ball->yb = rand() % (colonne - 2) + 1;
    ball->dirXb = 1;
    ball->dirYb = 1;
}

void updateBallPosition(struct Ball *ball, char table[ligne][colonne])
        {
    table[ball->xb][ball->yb] = ' '; // Efface la position
    int nextXb = ball->xb + ball->dirXb;
    int nextYb = ball->yb + ball->dirYb;
    if (nextXb == 0 || nextXb == ligne - 1) {
        ball->dirXb = -ball->dirXb;
    }
    if (nextYb == 0 || nextYb == colonne - 1) {
        ball->dirYb = -ball->dirYb;
    }

    ball->xb += ball->dirXb;
    ball->yb += ball->dirYb;

    table[ball->xb][ball->yb] = 'b'; // Nouvelle position de la balle
}

void displayTable(char table[ligne][colonne]) {
    system("cls");
    for (int h = 0; h < ligne; h++)
    {
        for (int k = 0; k < colonne; k++)
        {
            printf("%c", table[h][k]);
        }
        printf("\n");
    }
}
//fin sous programme

